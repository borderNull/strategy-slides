.profySlide
    box vertical 
    position relative
    height 658px
    overflow hidden
    
.profySlideBrownImg
    position absolute
    top 0    
    
.profySlideAuthorImg
    position absolute
    top -100px
    left 50%
    transform translateX(-50%)
    z-index 10
    
.profySlideHopImg
    position absolute
    top 0
    right 0
    
.profySlideArticle
    min-width 194px
    max-width 434px
    margin 100px 0 45px 90px
    z-index 11
    color #fff
    
.profySlideArticleAuthor
    margin-bottom 12px
    letter-spacing 2px
    text-transform uppercase
    font-size 16px
    font-family 'Proxima Nova Bold', Arial
    
.profySlideArticleHeading
    margin-bottom 35px
    line-height 40px
    letter-spacing -1px
    font-size 34px
    font-family 'Gotham Pro Bold', Arial
    
.profySlideArticleLink
    padding 13px 32px
    border-radius 22px
    background #9ad875
    color #000
    text-decoration none
    text-transform uppercase
    letter-spacing 1px
    font-size 14px
    font-family 'Proxima Nova Bold', Arial
    text-shadow 1px 1px 0px rgba(255,255,255, 56%)
    
.slideArticleList
    box horizontal space-between
    width 80%
    margin-left 90px
    z-index 10
    
.slideArticleListItem
    width 30%
    padding-top 20px
    border-top 1px solid rgba(195, 185, 185, 0.4)
    &:last-of-type
        margin 0
    &.active
        border-top 5px solid #fff
        
.slideArticleListItemName
    margin-bottom 15px
    color #ebe4e4
    line-height 12px
    letter-spacing 1px
    text-transform uppercase
    font-size 10px
    font-family 'Gotham Pro Medium', Arial
    
.slideArticleListItemTheme
    max-width 182px
    display block
    color #fff
    text-decoration none
    text-transform uppercase
    line-height 24px
    font-size 16px
    font-family 'Gotham Pro Bold', Arial
    
    
    
        