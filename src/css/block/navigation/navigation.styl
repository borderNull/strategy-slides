    position absolute
    top 60px
    left 60px
    z-index 5
    +below(1024px)
      display none
    
.navSectionLogo
    width 147px
    height 21px
    padding 5px
    margin-right 72px
    border-radius 4px
    background #060707

.navSectionList
    box horizontal middle space-between
    width 515px
    
.navSectionListItemLink
    color #000
    text-decoration none
    letter-spacing 1px 
    text-transform uppercase
    font 12px "Muller-ExtraBold", Arial
